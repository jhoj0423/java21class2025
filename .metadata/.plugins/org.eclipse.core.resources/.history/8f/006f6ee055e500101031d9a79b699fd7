package iFexample;

import java.util.Scanner;

public class ifEx11 {

	public static void main(String[] args) {
		// 
		Scanner scan = new Scanner(System.in);
		System.out.println("=== 롤데리아 ===");
		int b_burger = 8700;
		int s_burger = 6200;
		int coke = 1500;
		System.out.printf("1.불고기 버거 : %d원%n2.새우버거 : %d원%n3.콜라 : %d원%n",b_burger,s_burger,coke);
		System.out.print("메뉴를 선택하세요 : ");
		int menu = 0;
		menu = scan.nextInt();		
		System.out.print("현금을 입력하세요 : ");
		int money = 0;
		money = scan.nextInt();
		switch (menu) {
			case 1 : if(money<8700) {
				System.out.println("현금이 부족합니다");
				}else {
					System.out.println("잔돈 : "+(money-b_burger)+"원");
				};
				break;
			case 2 : if(money<6200) {
				System.out.println("현금이 부족합니다");
			}else {
				System.out.println("잔돈 : "+(money-s_burger)+"원");
			};
			break;
			case 3 : if(money<1500) {
				System.out.println("현금이 부족합니다");
			}else {
				System.out.println("잔돈 : "+(money-coke)+"원");
			};
			break;
		}
		
	}

}
