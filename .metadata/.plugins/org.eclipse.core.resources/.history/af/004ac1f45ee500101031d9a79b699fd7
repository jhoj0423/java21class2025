package iFexample;

import java.util.Scanner;

public class ifEx14 {

	public static void main(String[] args) {
		Scanner scan = new Scanner(System.in);
		System.out.println("==== MEGA ATM ====");
		int account = 11111;
		int password = 1234;
		int state = 0;
		int cash = 20000; // 보유현금
		int balance = 30000; //통장잔액
		int id = 0;
		int pw = 0;
		int service = 0;
		int money = 0;
		System.out.println("1.로그인 2.종료");
		state = scan.nextInt();
		System.out.println("아이디와 패스워드를 입력해 주세요");
		id = scan.nextInt();
		pw = scan.nextInt();
		if(state==1) {
			if(id==account && pw == password) {
				System.out.println("1.입금 2.출금 3.조회");
				service = scan.nextInt();
				if(service==1) {
					System.out.println("입금할 금액을 입력하세요");
					money = scan.nextInt();
					cash = cash-money;
					balance = balance+money;
					System.out.printf("입금 후 통장잔액 : %d원%n",balance);
					System.out.printf("입금 후 내 현금 전액 : %d원%n",cash);
				}else if(service==2) {
					System.out.println("출금할 금액을 입력하세요");
					money = scan.nextInt();
					cash = cash+money;
					balance = balance-money;
					System.out.printf("출금 후 통장잔액 : %d원%n",balance);
					System.out.printf("출금 후 내 현금 전액 : %d원%n",cash);
				}else if(service==3) {
					System.out.printf("통장잔액 : %b원 입니다",balance);
				}
				
			}else {
				System.out.println("아이디와 패스워드를 확인해주세요");
			}
		}else {
			System.out.println("종료");
		}
		

	}

}
