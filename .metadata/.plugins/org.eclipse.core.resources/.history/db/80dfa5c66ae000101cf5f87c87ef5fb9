package example;

public class DataEx01 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		// char 데이터 타입 => 한 음절 표현 반드시 'ㅁ' 작은 따온표 사용한다.
		char ch = 'A'; // 변수란 값(value)을 대입하는 번지 주소를 이름으로 표현
		char ch2 = 'a'; 
		System.out.println(ch);
		// (int)ch => 명시적 형 변환
		// char인 데이터 타입의 형을 명시해서 int로 변형하는 것
		System.out.println((int)ch);
		System.out.println((int)ch2);
		
		int ch3 = 67;
		System.out.println((char)ch3);
		
		//String 객체 타입, 반드시 첫 글자는 대문자
		//Integer => Integer 객체 데이터 타입
		// 개체 타입의 변수에 저장되는 값은 실제 값이 존재하는 
		//메모리의 번지 주소이다
		
		//현재 str 변수에 저장된 데이터는 "Abort"가 아니라
		//"Abort"가 존재하는 메모리 어드레스 주소인 2ff4acd0 이다.
		String str="Abort";
		System.out.println(System.identityHashCode(str));//10진수로 출력
		int id = System.identityHashCode(str); //804564176
		System.out.println(Integer.toHexString(id)); // 16로 변환 후 출력
		
		
		String str2="강아지";
		System.out.println(str);
		System.out.println(str2);
		
		//byte 데이터 타입 => 1byte = 8bit
		//byte 표현 범위 : -128~127
		//자바 기본으로 연산의 메모리 용량이 32bit아가 때문에
		//기본으로 정수 int 데이터 타입을 사용한다.
		
		byte by1 =127;
		//byte by2 =128;
		
		//long 데이터 타입 => 정수(int)타입의 허용범위를 초과한 경우 
		//반드시 L또는 l접미사를 붙인다.
		//long lo1 = 10000000000;
		long lo2 = 10000000000L; //JVM이 관리하기때문에 구분하는용도L 
		long lo3 = 50;
		
		//이스케이프 형식을 이용해서 문자안의 각종 특정문자들을 포함 시킬수 있다.
		//이스케이프 형식 =>\(역슬래시)" =>\뒤의 문자 출력된다
		String str3 = "나는 \"자바\"를  좋아 합니다.";
		System.out.println(str3);
		System.out.println("번호\t이름\t직업");
		System.out.println("번호\'이름\'직업");
		System.out.print("번호\'이름\'직업\n");
		System.out.print("번호\'이름\'직\n");
		System.out.println("봄\\여름\\가을\\겨울");
	}

}
